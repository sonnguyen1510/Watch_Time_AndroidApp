<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WatchTime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EDEDED</item>
        <item name="colorPrimaryVariant">#EDEDED</item>
        <item name="colorOnPrimary">#EDEDED</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#7C7C7C</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="theme" parent="Theme.AppCompat.Light.NoActionBar" />
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="background">@android:color/transparent</item>
    </style>
</resources>