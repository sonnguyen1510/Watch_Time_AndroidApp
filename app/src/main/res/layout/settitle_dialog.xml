<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/settitle_alarm"
    android:layout_margin="16dp"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:background="@drawable/addalarm_settittle_tittle"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:text="Tittle" />

    <EditText
        android:id="@+id/alarm_settittle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter your tittle"
        android:background="@drawable/enter_title_edittext"
        android:inputType="textPersonName"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/alarm_settittle_savetitle"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:background="#D6D4D4"
            android:textAlignment="gravity"
            android:gravity="center_vertical|center_horizontal"
            android:text="Set title"

            >

        </TextView>
    </LinearLayout>
</LinearLayout>