<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/Alarm_isChecked"
            android:visibility="gone"
            >

        </CheckBox>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/alarm_title"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text = "Title"
                        android:textStyle="bold"
                        android:textSize="20dp"></TextView>
                    <TextView
                        android:id="@+id/alarm_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="06:25"
                        android:textSize="50dp"
                        tools:layout_editor_absoluteX="19dp"
                        tools:layout_editor_absoluteY="22dp" />

                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/Edit_Alarm"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:foregroundGravity="center_vertical"
                        android:scaleType="fitEnd"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.78"></ImageView>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <Switch
                    android:id="@+id/active_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/switch_alarm_item_active"
                    android:visibility="gone"
                    />



            </LinearLayout>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="left"
                >
                <TextView
                    android:id="@+id/alarm_repeatSunday"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:text="S"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/repeatday_alarmclcok"
                    android:layout_margin="10dp"
                    >

                </TextView>
                <TextView
                    android:id="@+id/alarm_repeatMonday"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:text="M"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/repeatday_alarmclcok"
                    android:layout_margin="10dp"
                    >

                </TextView>
                <TextView
                    android:id="@+id/alarm_repeatTuesday"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:text="T"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/repeatday_alarmclcok"
                    android:layout_margin="10dp"
                    >

                </TextView>
                <TextView
                    android:id="@+id/alarm_repeatWednesday"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:text="W"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/repeatday_alarmclcok"
                    android:layout_margin="10dp"
                    >

                </TextView>
                <TextView
                    android:id="@+id/alarm_repeatThursday"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:text="Th"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/repeatday_alarmclcok"
                    android:layout_margin="10dp"
                    >

                </TextView>
                <TextView
                    android:id="@+id/alarm_repeatFriday"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:text="F"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/repeatday_alarmclcok"
                    android:layout_margin="10dp"
                    >

                </TextView>
                <TextView
                    android:id="@+id/alarm_repeatSaturday"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:text="Sa"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@drawable/repeatday_alarmclcok"
                    android:layout_margin="10dp"
                    >

                </TextView>

            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>